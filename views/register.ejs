<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .hidden {
            display: none;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .radio-group {
            display: flex;
            gap: 10px;
        }
        .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }
        .btn:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }
        .form-group input[type="file"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <a href="/">Blogathon</a>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/rules">Rules</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/register">Register</a></li>
                <li><a href="/admin/login">Admin Login</a></li>
            </ul>
        </div>
    </nav>

    <section class="section">
        <div class="container">
            <h2>Register Now</h2>
            <form class="registration-form" action="/register" method="POST" enctype="multipart/form-data">
                <!-- Name -->
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" required>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <!-- Mobile -->
                <div class="form-group">
                    <label for="mobile">Mobile Number</label>
                    <input type="tel" id="mobile" name="mobile" required>
                </div>

                <!-- Gender -->
                <div class="form-group">
                    <label>Gender</label>
                    <div class="radio-group">
                        <input type="radio" id="male" name="gender" value="male" required>
                        <label for="male">Male</label>
                        <input type="radio" id="female" name="gender" value="female">
                        <label for="female">Female</label>
                    </div>
                </div>

                <!-- Photo Upload -->
                <div class="form-group">
                    <label for="photo">Upload Photo (Mandatory)</label>
                    <input type="file" id="photo" name="photo" accept="image/*" required>
                </div>

                <!-- LPU Student -->
                <div class="form-group">
                    <label>Are you an LPU Student?</label>
                    <div class="radio-group">
                        <input type="radio" id="lpuYes" name="isLpuStudent" value="yes" required>
                        <label for="lpuYes">Yes</label>
                        <input type="radio" id="lpuNo" name="isLpuStudent" value="no">
                        <label for="lpuNo">No</label>
                    </div>
                </div>

                <!-- Registration Number -->
                <div class="form-group">
                    <label for="registrationNo">Registration Number</label>
                    <input type="text" id="registrationNo" name="registrationNo" required>
                </div>

                <!-- Accommodation -->
                <div id="accommodationGroup" class="form-group hidden">
                    <label>Do you need accommodation?</label>
                    <div class="radio-group">
                        <input type="radio" id="accommodationYes" name="accommodation" value="yes">
                        <label for="accommodationYes">Yes</label>
                        <input type="radio" id="accommodationNo" name="accommodation" value="no">
                        <label for="accommodationNo">No</label>
                    </div>
                </div>

                <!-- Participation Type -->
                <div class="form-group">
                    <label>Participation Type</label>
                    <div class="radio-group">
                        <input type="radio" id="solo" name="participationType" value="solo" required onclick="toggleFields()">
                        <label for="solo">Solo</label>
                        <input type="radio" id="team" name="participationType" value="team" onclick="toggleFields()">
                        <label for="team">Team</label>
                    </div>
                </div>

                <!-- Team Fields (Hidden initially) -->
                <div id="teamFields" class="hidden">
                    <div class="form-group">
                        <label for="teamName">Team Name</label>
                        <input type="text" id="teamName" name="teamName">
                    </div>

                    <div class="form-group">
                        <label for="teamMember1">Team Member 1 Name</label>
                        <input type="text" id="teamMember1" name="teamMembers[0][name]">
                    </div>
                    <div class="form-group">
                        <label for="teamMember1Phone">Team Member 1 Phone</label>
                        <input type="tel" id="teamMember1Phone" name="teamMembers[0][phone]">
                    </div>
                    <div class="form-group">
                        <label for="teamMember1Reg">Team Member 1 Registration No</label>
                        <input type="text" id="teamMember1Reg" name="teamMembers[0][registrationNo]">
                    </div>

                    <div class="form-group">
                        <label for="teamMember2">Team Member 2 Name</label>
                        <input type="text" id="teamMember2" name="teamMembers[1][name]">
                    </div>
                    <div class="form-group">
                        <label for="teamMember2Phone">Team Member 2 Phone</label>
                        <input type="tel" id="teamMember2Phone" name="teamMembers[1][phone]">
                    </div>
                    <div class="form-group">
                        <label for="teamMember2Reg">Team Member 2 Registration No</label>
                        <input type="text" id="teamMember2Reg" name="teamMembers[1][registrationNo]">
                    </div>
                </div>

                <!-- Consent Section (Hidden initially) -->
                <div id="consentSection" class="hidden">
                    <div class="form-group">
                        <p>
                            I agree to participate solo in Type Till Sunrise and accept the following:
                            <ul>
                                <li>I will be randomly paired with other solo participants if required.</li>
                                <li>I will cooperate with my assigned team, and refusal may lead to disqualification.</li>
                                <li>I have read and accept all event rules.</li>
                            </ul>
                        </p>
                        <label>
                            <input type="checkbox" id="consentCheckbox" name="consentCheckbox">
                            I agree to the terms and conditions.
                        </label>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="submitButton" class="btn primary-btn" disabled>Complete Registration</button>
            </form>
        </div>
    </section>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p><i class="fas fa-envelope"></i> management.pradyut@gmail.com</p>
                <p><i class="fas fa-phone"></i> +91 756 995 2369, +91 760 999 2754</p>
                <p><i class="fas fa-map-marker-alt"></i> LPU Campus, Punjab</p>
            </div>
            <div class="footer-section">
                <h3>Follow Us</h3>
                <div class="social-links">
                    <a href="https://www.instagram.com/pradyut_foundation21"><i class="fab fa-instagram"></i></a>
                    <a href="https://www.linkedin.com/company/pradyut-foundation/"><i class="fab fa-linkedin"></i></a>
                    <a href="https://www.facebook.com/pradyutfoundation/"><i class="fab fa-facebook"></i></a>
                </div>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/register">Registration</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/rules">Rules</a></li>
                    <li><a href="/admin/login">Admin Panel</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>Â© 2024 Type Till Sunrise - Inter-College Blogathon</p>
        </div>
    </footer>

    <script>
        function toggleFields() {
            const teamFields = document.getElementById("teamFields");
            const consentSection = document.getElementById("consentSection");
            const teamRadio = document.getElementById("team");
            const soloRadio = document.getElementById("solo");
            const submitButton = document.getElementById("submitButton");
            const consentCheckbox = document.getElementById("consentCheckbox");

            if (teamRadio.checked) {
                // Hide consent section and enable submit button for team participants
                teamFields.classList.remove("hidden");
                consentSection.classList.add("hidden");
                submitButton.disabled = false;
            } else if (soloRadio.checked) {
                // Show consent section and disable submit button until checkbox is checked
                teamFields.classList.add("hidden");
                consentSection.classList.remove("hidden");
                submitButton.disabled = true;
            }
        }

        function toggleAccommodation() {
            const accommodationGroup = document.getElementById("accommodationGroup");
            const lpuYes = document.getElementById("lpuYes");
            const lpuNo = document.getElementById("lpuNo");

            if (lpuYes.checked) {
                // Hide accommodation field for LPU students
                accommodationGroup.classList.add("hidden");
            } else if (lpuNo.checked) {
                // Show accommodation field for non-LPU students
                accommodationGroup.classList.remove("hidden");
            }
        }

        // Add event listeners for LPU student radio buttons
        document.getElementById("lpuYes").addEventListener("change", toggleAccommodation);
        document.getElementById("lpuNo").addEventListener("change", toggleAccommodation);

        // Add event listener to the consent checkbox
        document.getElementById("consentCheckbox").addEventListener("change", function () {
            const submitButton = document.getElementById("submitButton");
            submitButton.disabled = !this.checked; // Enable/disable submit button based on checkbox state
        });

        // Initialize form fields on page load
        document.addEventListener("DOMContentLoaded", function () {
            toggleFields(); // Set initial state based on default selection
            toggleAccommodation(); // Set initial state for accommodation field
        });
    </script>
</body>
</html>