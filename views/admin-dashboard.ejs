<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }

        .navbar {
            background: #333;
            color: #fff;
            padding: 15px 0;
        }

        .nav-container {
            width: 90%;
            margin: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo a {
            color: #fff;
            text-decoration: none;
            font-size: 1.5em;
            font-weight: bold;
        }

        .nav-links {
            list-style: none;
            display: flex;
        }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
            font-size: 1em;
            transition: 0.3s;
        }

        .nav-links a:hover {
            text-decoration: underline;
        }

        .section {
            padding: 20px;
            text-align: center;
        }

        .container {
            width: 90%;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 20px;
            font-size: 1.8em;
            color: #333;
        }

        .stats {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .stat-box {
            background: #333;
            color: #fff;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            width: 30%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: #fff;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #eaeaea;
        }

        .export-btn {
            background: #28a745;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            margin-top: 15px;
            border-radius: 5px;
        }

        .footer {
            background: #333;
            color: #fff;
            padding: 20px 0;
            margin-top: 20px;
            text-align: center;
        }

        .footer-content {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            width: 90%;
            margin: auto;
        }

        .footer-section {
            flex: 1;
            padding: 10px;
            min-width: 250px;
        }

        .footer-section h3 {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .footer-bottom {
            margin-top: 10px;
            font-size: 0.9em;
        }

        @media (max-width: 768px) {
            .stats {
                flex-direction: column;
            }

            .stat-box {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <a href="/">Blogathon</a>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <section class="section">
        <div class="container">
            <h2>Admin Dashboard</h2>

            <div class="stats">
                <div class="stat-box">
                    <h3>Total Registrations</h3>
                    <p id="total-registrations">0</p>
                </div>
                <div class="stat-box">
                    <h3>Total Teams</h3>
                    <p id="total-teams">0</p>
                </div>
                <div class="stat-box">
                    <h3>Completed Payments</h3>
                    <p id="completed-payments">0</p>
                </div>
            </div>

            <button class="export-btn" onclick="exportTableToCSV()">Export Data</button>

            <table id="userTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>LPU Student</th>
                        <th>Registration No</th>
                        <th>Accommodation</th> <!-- New column for accommodation -->
                        <th>Registered At</th>
                        <th>Team Member</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.mobile %></td>
                            <td><%= user.isLpuStudent ? 'Yes' : 'No' %></td>
                            <td><%= user.registrationNo || 'N/A' %></td>
                            <td><%= user.accommodation || 'N/A' %></td> <!-- Display accommodation -->
                            <td><%= user.createdAt.toLocaleString() %></td>
                            <td>
                                <% if (user.participationType === 'team' && user.teamMembers && user.teamMembers.length > 0) { %>
                                    <ul>
                                        <% user.teamMembers.forEach(member => { %>
                                            <li><%= member.name %> - <%= member.phone %> - <%= member.registrationNo %></li>
                                        <% }); %>
                                    </ul>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </section>

    <footer class="footer">
        <div class="footer-bottom">
            <p>Â© 2024 Type Till Sunrise - Inter-College Blogathon</p>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let users = <%- JSON.stringify(users) %>;
            document.getElementById("total-registrations").innerText = users.length;
            document.getElementById("completed-payments").innerText = users.length;
            document.getElementById("total-teams").innerText = users.filter(user => user.participationType === 'team').length;
        });

        function exportTableToCSV() {
            let table = document.getElementById("userTable");
            let rows = Array.from(table.rows);
            let csvContent = rows.map(row => {
                return Array.from(row.cells).map(cell => {
                    if (cell.querySelector("ul")) {
                        return Array.from(cell.querySelectorAll("li")).map(li => li.textContent).join(" | ");
                    } else {
                        return cell.textContent;
                    }
                }).join(",");
            }).join("\n");

            let blob = new Blob([csvContent], { type: "text/csv" });
            let link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = "registrations.csv";
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>